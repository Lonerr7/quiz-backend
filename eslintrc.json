{
  "env": {
    "node": true,
    "es2022": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": "warn",
    "no-debugger": "error",
    "no-unused-vars": "warn",
    "prefer-const": "error",
    "eqeqeq": ["error", "always"],
    "require-await": "error",
    "no-promise-executor-return": "error",


    "no-underscore-dangle": ["error", {
      "allow": ["_id"]
    }],


    "promise/catch-or-return": "error",
    "promise/no-return-wrap": "error"
  }
}